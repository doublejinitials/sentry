<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:id="@+id/container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:background="#000000"
        tools:context=".ServerSettingsActivity">

    <LinearLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
        <ImageButton
                android:id="@+id/back_button"
                android:background="#00000000"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:elevation="8dp"
                android:text="Server Address"/>
    </LinearLayout>

    <EditText
            android:id="@+id/server_address_input"
            android:inputType="textUri"
            android:background="@drawable/input_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:padding="8dp"
            android:text="192.168.10.1:8080"
            android:textColor="@color/foreground"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@id/appbar"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/server_address_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="12dp">
        <ImageView
                android:id="@+id/connection_status_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more_horiz_yellow_24dp"/>
        <TextView
                android:id="@+id/connection_status_text"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:textColor="@color/yellow"
                android:text="Connecting..."/>
    </LinearLayout>

    <Button
            android:id="@+id/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:drawableStart="@drawable/ic_check_white_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="18sp"/>

</android.support.constraint.ConstraintLayout>
